{
  "name": "browrec",
  "version": "0.2.0",
  "description": "Record browser actions with LLM-assisted mode and replay fast without LLM",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "browrec": "dist/index.js"
  },
  "files": ["dist", "dist-ui", "README.md"],
  "scripts": {
    "build": "npm run build:cli && npm run build:ui",
    "build:cli": "tsc -p tsconfig.json",
    "build:ui": "vite build --mode client && vite build",
    "dev": "tsx src/index.ts",
    "dev:ui": "vite --port 4312",
    "lint": "biome check . && tsc --noEmit",
    "format": "biome format --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "postinstall": "playwright install chromium",
    "prepare": "npm run build"
  },
  "keywords": ["cli", "playwright", "automation", "scraping", "llm"],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.2",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "hono": "^4.7.4",
    "neverthrow": "^8.2.0",
    "open": "^10.1.0",
    "playwright": "^1.51.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@hono/vite-build": "^1.9.3",
    "@hono/vite-dev-server": "^0.25.0",
    "@types/node": "^22.13.10",
    "honox": "^0.1.54",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vite": "^5.4.21",
    "vitest": "^2.1.8"
  }
}
